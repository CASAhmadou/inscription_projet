{% extends 'base.html.twig' %}

{% block body %}

  {# <div class="container col-8 mt-5"> #}
    <div class="card ml-5">
      <div class="card-body">
        <h4 class="card-title">LISTE DES PROFESSEURS</h4>
        <p class="card-text">
          <div class="d-grid gap-2 d-md-flex justify-content-md-end sticky">
            <a href="{{ path('add_professeur') }}">
              <i class="fa-solid fa-plus"></i>
            </a>
            <button class="text-light btn btn-primary me-md-2" value="" type="button">Nouveau</button>
          </div>
        
          <table class="table table-striped table-bordered table-hover text-center">
            <thead>
              <tr>
                <th scope="col">Nom Complet</th>
                <th scope="col">Grade</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for professeur in profs %}
                  <tr>
                      <td scope="row">{{ professeur.nomComplet }}</td>
                      <td>{{ professeur.grade }}</td>

                      <td class="d-flex justify-content-around align-self-center">    
                        <button type="submit" value class="btn btn-outline-primary">
                          <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                        
                        <button type="submit" class="btn btn-outline-primary">
                          <i class="fa-solid fa-person-chalkboard"></i>
                        </button>
                    
                      <form action="" method="POST">
                        <button type="submit" class="btn btn-outline-primary">
                          <input type="hidden" name="id" value="">
                          <i class="fa-solid fa-trash-can"></i>
                        </button>
                      </form>
                      </td>
                  </tr>
                {% endfor %}
            </tbody>
          </table>
        </p>
      </div>
    </div>
    <div class='d-flex justify-content-center'>
        {% do profs.setPageRange(2) %}
        {{ knp_pagination_render(profs, 'base/pagination.html.twig') }}
    </div>

{% endblock %}
